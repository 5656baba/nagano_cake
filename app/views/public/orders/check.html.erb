<h1>注文情報確認</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% sum=0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <% subtotal=(cart_item.item.tax_price)*cart_item.amount %>
      <td>
        <%= attachment_image_tag cart_item.item, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= subtotal %></td>
      <% sum+=subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <th>送料</th>
    <th><%= @sipping_fee %></th>
  </tr>
  <tr>
    <th>商品合計</th>
    <th><%= sum %></th>
  </tr>
  <tr>
    <th>請求金額</th>
    <th><%= sum+@sipping_fee %></th>
  </tr>
</table>
<table>
  <tr>
    <th>支払方法</th>
    <th><%= @order.payment_method_i18n %> </th>
  </tr>
  <tr>
    <th>お届け先</th>
    <th><%# @order.delivery_full_address %> </th>
  </tr>
</table>
<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.hidden_field :delivery_postal_code, value: @order.delivery_postal_code %>
  <%= f.hidden_field :delivery_address, value: @order.delivery_address %>
  <%= f.hidden_field :delivery_name, value: @order.delivery_name %>
  <%= f.hidden_field :sipping_fee, value: @sipping_fee %>
  <%= f.hidden_field :billing_amount, value: sum+@sipping_fee %>
  <%= f.hidden_field :customer_id, value: @order.customer_id %>
  <%= f.submit "注文を確定する", class: "btn btn-outline-secondary btn-block btn-secondary size" %>
<% end %>