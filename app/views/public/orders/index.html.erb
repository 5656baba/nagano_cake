<div class="container-fulid">
<h3 class="row justify-content-start position"><span class="thead">注文履歴一覧</span></h3>
  <div class="row justify-content-center">
    <div class="col-md-11">
      <table class="table table-bordered table-sm order-details-index">
        <tr>
          <th class="thead">注文日</th>
          <th class="thead">配送先配送先</th>
          <th class="thead">注文商品</th>
          <th class="thead">支払金額</th>
          <th class="thead">ステータス</th>
          <th class="thead">注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at.to_s(:datetime_jp_2) %></th>
          <th>
            <%= order.delivery_postal_code %></br>
            <%= order.delivery_address %></br>
            <%= order.delivery_name %>
          </th>
            <th>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %></br>
              <% end %>
            </th>
          <th><%= order.billing_amount.to_s(:delimited) %>円</th>
          <th><%= order.order_status_i18n %></th>
          <th><%= link_to "表示する" , order_path(order.id), class: "btn btn-outline-success btn-block btn-success size" %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>