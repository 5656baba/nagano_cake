<h1>注文履歴詳細</h1>
<table>
  <tr>注文情報</tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.to_s(:datetime_jp_2) %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td><%= @order.customer.full_address %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.order_status_i18n %></td>
  </tr>
</table>

<table>
  <tr>注文内容</tr>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% sum=0 %>
    <% @order_details.each do |order_detail| %>
    <tr>
      <% subtotal=(order_detail.item.tax_price)*order_detail.amount %>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= subtotal %></td>
      <% sum+=subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>請求情報</tr>
  <tr>
    <td>商品合計</td>
    <td><%= sum %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.sipping_fee %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= sum+@order.sipping_fee %></td>
  </tr>
</table>

