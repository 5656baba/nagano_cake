<h1>商品一覧（全<%= @items.count %>件）</h1>
<table>
  <% @items.each do |item| %>
  <tr>
    <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
  </tr>
  <tr><%= link_to item.name, item_path(item.id) %></tr>
  <tr>￥<%= item.price %></tr>
  <% end %>
</table>

