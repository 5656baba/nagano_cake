<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%# link_to genre.name, %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= attachment_image_tag @item, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
<table>
  <tr>
    <th><%= @item.name %></th>
  </tr>
  <tr>
    <th><%= @item.introduction %></th>
  </tr>
  <tr>
    <th>￥<%= @item.tax_price %>（税込）</th>
  </tr>
  <tr>
  </tr>
</table>
 <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
   <table>
     <tr>
      <%= f.hidden_field :item_id, value: @item.id  %>
      <th><%= f.select :amount, *[1..10], {prompt: "--個数を選択--"} %></th>
      <th><%= f.submit "カートに入れる", class: "btn btn-outline-secondary btn-block btn-secondary size" %></th>
    </tr>
  </table>
 <% end %>