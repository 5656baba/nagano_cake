<div class="container">
  <h3 class="row justify-content-start position"><span class="thead">会員一覧</span></h3>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="thead">会員ID</th>
            <th class="thead">氏名</th>
            <th class="thead">メールアドレス</th>
            <th class="thead">ステータス</th>
            <th class="thead" colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active==true %>
            <p class="text-success">有効</p>
            <% else %>
            <p class="text-danger">退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>