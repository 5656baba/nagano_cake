<div class="container">
<h3 class="row justify-content-start position"><span class="thead"><%= @customer.full_name %>さんの会員詳細</span></h3>
  <div class="col-md-8">
    <table class="table customer-show">
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
        <th></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th colspan="2"><%= @customer.last_name %><%= @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th colspan="2"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
      </tr>
        <th>郵便番号</th>
        <th colspan="2"><%= @customer.postal_code %></th>
      </tr>
      </tr>
        <th>住所</th>
        <th colspan="2"><%= @customer.address %></th>
      </tr>
      </tr>
        <th>電話番号</th>
        <th colspan="2"><%= @customer.telephone_number %></th>
      </tr>
      </tr>
        <th>メールアドレス</th>
        <th colspan="2"><%= @customer.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th>
          <% if @customer.is_active==true %>
          <p class="text-success">有効</p>
          <% else %>
          <p class="text-danger">退会</p>
          <% end %>
        </th>
        <th></th>
      </tr>
      <tr>
        <th></th>
        <th class="list-button"><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-outline-success btn-block btn-success size" %></th>
        <th class="list-button"><%= link_to "注文履歴一覧を見る", admin_root_path(@customer.id), class: "btn btn-outline-primary btn-primary size" %></th>
      </tr>
    </table>
  </div>
</div>