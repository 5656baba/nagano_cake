<div class="container">
  <div class="error_message">
    <% if @genre.errors.any? %>
      <h2><%= @genre.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
      <% end %>
    <% end %>
  </div>
<h3 class="row justify-content-start position"><span class="thead">ジャンル一覧・追加</span></h3>
<%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
<div class="genre">
  <p>ジャンル名</p>
  <p><%= f.text_field :name %></p>
  <p><%= f.submit "新規登録", class: 'btn btn-success' %></p>
</div>
<% end %>
<div class="col-md-7">
  <table class="table genre-list">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td class="genre-name"><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>