<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <h2><%= link_to "Nagano cake", root_path, class: "navbar-brand" %></h2>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", customers_path, class: 'fas fa-home nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'fas fa-users nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: 'fas fa-book-open nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: 'fas fa-users nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: 'fas fa-book-open nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_root_path, class: 'fas fa-book-open nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: 'fas fa-book-open nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "About", about_path, class: 'fas fa-home nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'fas fa-link nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
            </li>
          <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <div class="search-form">
        <% if customer_signed_in? %>
          <%= form_with model: @item, url: search_items_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, placeholder: "商品名", value: @keyword %>
            <%= f.submit "検索" %>
          <% end %>
        <% elsif admin_signed_in? %>
          <%= form_with model: @item, url: search_admin_items_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, placeholder: "商品名", value: @keyword %>
            <%= f.submit "検索" %>
          <% end %>
        <% else %>
          <%= form_with model: @item, url: search_items_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, placeholder: "商品名", value: @keyword %>
            <%= f.submit "検索" %>
          <% end %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
